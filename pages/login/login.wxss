/* pages/login/login.wxss */
page {
  height: 100%;
  padding: 0;
  background: -webkit-linear-gradient(top left, rgb(248, 162, 131), rgb(242, 138, 126), rgb(235, 88, 118));
}

image.main_logo {
  display: block;
  margin: 0 auto 0 auto;
  width: 180rpx;
  height: 180rpx;
}

.login_space {
  height: 80rpx;
}

.login_form {
  display: block;
  margin: 0 auto 0 auto;
}
.login_form{
  display: flex;
  flex-direction:column;
}
.login_form_cell {
  display:block;
  width: 475rpx;
  margin: 3% auto;
  padding: 35rpx 30rpx;
  border: solid white 4rpx;
}
.register_complete{
  text-align: center;
  margin-top: 30rpx;
}
button{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 3000rpx 10000rpx;
  width: 400px;
}
.button-sp-area{
  margin: 0 auto;
  width: 100%;
}