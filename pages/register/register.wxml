<!--pages/register/register.wxml-->
<view class="container">
  <!-- <view class="regist_text">注册</view> -->
  <view class="space"></view>
  <view class="registbox">
    <view>
      <image class="photo" src="../../img/photo.png" mode="aspectFit"></image>
    </view>
    <view class="regist_form">
      <form action="">
        <view class="regist_form">
          <view class="regist_form_cell">
            <input class="regist_input" name="input" type="text" placeholder="用户名"
            placeholder-style=" text-align: center ;color: #ffffff" bindinput="inputNameReg"/>
          </view>
          <view class="regist_form_cell">
            <input class="regist_input" name="input" type="text" placeholder="手机号"
            placeholder-style=" text-align: center ;color: #ffffff" bindinput="inputPhoneReg"/>
          </view>
          <view class="regist_form_cell">
            <input class="regist_input" name="input" type="text" placeholder="邮箱"
            placeholder-style=" text-align: center ;color: #ffffff" bindinput="inputMailReg"/>
          </view>
          <view class="regist_form_cell">
            <input class="regist_input" name="input" type="text" placeholder="密码"
            placeholder-style=" text-align: center ;color: #ffffff" bindinput="inputPw0Reg"/>
          </view>
          <view class="regist_form_cell">
            <input class="regist_input" name="input" type="text" placeholder="再次确认密码"
            placeholder-style=" text-align: center ;color: #ffffff" bindinput="inputPw1Reg"/>
          </view>
          <view class="button-sp-area">
          <button class="but-regist regist" hover-class="button-hover" bindtap="getUserProfile">
            <view class="but_text">注册 </view>
          </button>
        </view>
        </view>
      </form>
    </view>
  </view>
  <view class="space"></view>
</view>