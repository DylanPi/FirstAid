/* pages/register/register.wxss */
page {
  height: 100%;
  padding: 0;
  background: -webkit-linear-gradient(top left, rgb(248, 162, 131), rgb(242, 138, 126), rgb(235, 88, 118));
}
.space{
  height: 5%;
}
.regist_text{
  display: block;
  margin: auto;
}
.registbox {
  width: 75%;
}

.photo {
  display: block;
  margin: 0 auto 10rpx auto;
  width: 150rpx;
  height: 150rpx;
}

.regist_form {
  display: flex;
  margin: 0 auto;
  flex-direction: column;
}

.regist_form_cell {
  display: block;
  width: 100%;
  margin: 3% auto;
  padding: 35rpx 0;
  border: solid white 4rpx;
}

.button-sp-area {
  display: block;
  margin: 0 0;
  width: 100%;
}

.but-regist {
  display: block;
  margin: 35rpx 35rpx;
  padding: 35rpx 35rpx;
  width: 100% !important;
  background-color: rgb(27, 72, 197);
  border-radius:100rpx;
}

.but_text {
  color: aliceblue;
  font-weight: lighter;
  font-size: 30rpx;
}